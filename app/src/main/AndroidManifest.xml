<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.listenergao.recyclerviewdemo">

    <!-- 添加震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.CommonRecyclerViewActivity" />
        <activity android:name=".activity.GridLayoutActivity" />
        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.StaggeredActivity" />
        <activity android:name=".activity.DragAndSlideActivity" />
        <activity android:name=".activity.SlipRemoveActivity"></activity>
    </application>

</manifest>